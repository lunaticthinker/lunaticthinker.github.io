baseURL = 'https://lunaticthinker.github.io/'
languageCode = 'en-us'
title = 'LunaticThinker.me'
theme = 'congo'

# Enable rendering of raw HTML fragments in Markdown (fixes "Raw HTML omitted" warnings)
[markup]
[markup.goldmark]
[markup.goldmark.renderer]
unsafe = true

# Define basic taxonomies (if needed later)
[taxonomies]
category = 'categories'
tag = 'tags'

# Ignore goldmark raw HTML warnings (redundant once unsafe=true but kept for cleanliness)
ignoreLogs = ['warning-goldmark-raw-html']

[params]
colorScheme = 'auto'                                                  # auto | light | dark
defaultAppearance = 'dark'                                            # Congo: preferred initial appearance
enableCodeCopy = true
showReadingTime = true
displayUpdatedDate = true
dateFormat = '2 Jan 2006'
description = 'Thoughts on code, encryption, ColdFusion, and poetry.'
author = 'Dragos Cirjan'

[params.social]
github = 'lunaticthinker'
twitter = ''
linkedin = ''
mastodon = ''

[menu]
[[menu.main]]
name = 'Posts'
url = '/posts/'
weight = 10
